<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MedicApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFF700</item>
        <item name="colorPrimaryVariant">#FFF700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorControlActivated">@color/teal_200</item>
        <item name="colorControlHighlight">#FFF700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->

        <item name="background_color">#80E4E4E4</item>
        <item name="text_color">#000000</item>
        <item name="button_textcolor">#000000</item>
        <item name="shape_fill_color">#FFFFFF</item>
        <item name="textfield_hint_color">#A8A8A8</item>
        <item name="floatingbtngradinetcolor">#ffBEBEBE</item>
    </style>
    <style name="Theme.MedicApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MedicApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MedicApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>