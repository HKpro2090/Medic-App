<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientCompleteProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:text="Complete your Profile"
            android:textColor="?attr/textfield_hint_color"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.019" />

        <EditText
            android:id="@+id/AgeCompleteProfile"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/textview_border"
            android:ems="10"
            android:fontFamily="@font/nunito_semibold"
            android:hint="Age"
            android:inputType="number"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.034" />

        <EditText
            android:id="@+id/heightCompleteProfile"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:background="@drawable/textview_border"
            android:ems="10"
            android:fontFamily="@font/nunito_semibold"
            android:hint="Height (cms)"
            android:inputType="number"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/BloodGroupSpinner"
            app:layout_constraintVertical_bias="0.037"
            app:layout_constraintWidth_percent="0.47" />

        <EditText
            android:id="@+id/WeightCompleteProfile"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:background="@drawable/textview_border"
            android:ems="10"
            android:fontFamily="@font/nunito_semibold"
            android:hint="Weight (Kg)"
            android:inputType="number"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.951"
            app:layout_constraintStart_toEndOf="@+id/heightCompleteProfile"
            app:layout_constraintTop_toBottomOf="@+id/BloodGroupSpinner"
            app:layout_constraintVertical_bias="0.037"
            app:layout_constraintWidth_percent="0.47" />

        <Spinner
            android:id="@+id/GenderSpinner"
            style="@style/SpinnerTheme"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:tooltipText="Gender"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.275"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AgeCompleteProfile"
            app:layout_constraintVertical_bias="0.032"
            app:layout_constraintWidth_percent="1" />

        <Spinner
            android:id="@+id/BloodGroupSpinner"
            style="@style/SpinnerTheme"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:tooltipText="Gender"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/GenderSpinner"
            app:layout_constraintVertical_bias="0.028"
            app:layout_constraintWidth_percent="1" />

        <Button
            android:id="@+id/CompleteProfileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#FFF700"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="center"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/heightCompleteProfile"
            app:layout_constraintVertical_bias="0.073" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>